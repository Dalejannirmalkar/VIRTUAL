<?xml version="1.0" encoding="utf-8"?>
  <selector xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <item android:state_pressed="true" >
            <shape>
                <solid
                    android:color="#ffffff" />
                <stroke
                    android:width="0.5dp"
                    android:color="#b2b9ba" />
                <corners
                    android:radius="20dp" />
                <padding
                    android:left="5dp"
                    android:top="5dp"
                    android:right="5dp"
                    android:bottom="5dp" />
            </shape>
        </item>
        <item>
            <shape>
                <gradient
                    android:startColor="#ffffff"
                    android:endColor="#b2b9ba"
                    android:angle="270" />
                <stroke
                    android:width="0.5dp"
                    android:color="#92ff2f" />
                <corners
                    android:radius="20dp" />
                <padding
                    android:left="5dp"
                    android:top="5dp"
                    android:right="5dp"
                    android:bottom="5dp" />
            </shape>
        </item>
    </selector>
